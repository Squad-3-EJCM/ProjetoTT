// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username    String     @id     @db.VarChar(75)
  email       String     @unique @db.VarChar(75)
  password    String     @db.VarChar(75)
  moderator   Boolean    @default(false)
  posts       Post[]
}

model Post {
  postId Int @id @default(autoincrement())
  description String 
  image String
  title String
  price String
  postDate DateTime
  publish User @relation(fields: [publishId],references: [postId])
  publishId Int
  addToCart User[]
  favorite User[]
  edit User[]
  commentting Comment[]
}

model Comment{
  commentId Int @id @default(autoincrement())
  postDate DateTime
  commentter User @relation(fields: [commentRelationId],references: [username])
  commenttedPost Post @relation(fields: [commentRelationId],references: [postId])
  commentRelationId Int
}
