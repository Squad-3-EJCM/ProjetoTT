// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Post {
  postId Int @id @default(autoincrement())
  description String 
  image String
  title String
  value String
  postDate DateTime
  publish User @relation(fields: [publishId],references: [postId])
  publishId Int
  addToCart User[]
  fivorite User[]
  edit User[]
  commenting Comment []
}
model Comment{
  commentId Int @id @default(autoincrement())
  postDate DateTime
  commentate User @relation(fields: [commentRelationId],references: [commentId])
  commenting Post @relation(fields: [commentRelationId],references: [commentId])
  commentRelationId Int

}
